        class ReservationController {
            + createReservation()
            + cancelReservation()
            + getReservations()
        }
    }
    
    package routes {
        class StudentRoutes {
            + registerRoutes(app: Express)
        }
        
        class MenuRoutes {
            + registerRoutes(app: Express)
        }
        
        class ReservationRoutes {
            + registerRoutes(app: Express)
        }
    }
    
    package views {
        class LoginPage
        class Lobby
        class DashboardMenus
        class DashboardReservations
    }

    package middleware {
        class Auth {
            + verifyToken(req, res, next)
        }
    }

    package config {
        class DatabaseConfig
    }
